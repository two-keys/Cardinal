<%= turbo_frame_tag message, src: message_path(message, frame: true), class: "pending-message message-turbo" do %>
    <div class="message">
      <p>. . .</p>
      <hr class="message-break"/>
      <span class="message-created-at old-timestamp hidden">
        Sent <%= legacy_time(Time.zone.now) %>
      </span>
      <span class="message-created-at new-timestamp">
        Sent <%= readable_time(Time.zone.now, mini: true) %>
      </span>
  </div>
<% end %>