<%= render @message %>

<div class="card primary">
  <div class="input-group">
    <%= link_to "Edit", edit_message_path(@message), class: "button" %>
    <%= link_to "Back", messages_path, class: "button" %>

    <%= button_to "Delete", @message, method: :delete, class: "button", data: {turbo_confirm: "Are you sure you want to delete this message?"}%>
  </div>
</div>
