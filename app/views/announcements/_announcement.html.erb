<div id="<%= dom_id announcement %>" class="card">
  <strong><%= link_to announcement.title, announcement %></strong>
  <br />
  <span><%= announcement.created_at.strftime("%l:%M %p %b %d %Y") %></span>
  <% if announcement.updated_at > announcement.created_at %>
    <h6 class="announcement_edited">(Edited <%= announcement.updated_at.strftime("%l:%M %p %b %d %Y") %>)</h6>
  <% end %>
  <p>
    <%= simple_format h(announcement.content) %>
  </p>
</div>
