<%= form_with(model: announcement) do |form| %>
  <% if announcement.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

      <ul>
        <% announcement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <div>
      <%= form.label "Push to all subscribed users?", style: "display: block" %>
      <%= form.check_box :push %>
    </div>
  </div>

  <div class="card secondary">
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content, id: "announcement_#{announcement.id ? announcement.id : "new"}_content" , data: {controller: "easy-mde", 'easy-mde-save-value': true}  %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
