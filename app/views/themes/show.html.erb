<div class="card primary">
  <%= render @theme %>
  <div class="input-group">
    <% if can? :create, Theme %>
      <%= link_to "Edit", edit_theme_path(@theme), class: "button" %>
    <% end %>
    <%= link_to "Back", themes_path, class: "button" %>

    <% if can? :destroy, @theme %>
      <%= button_to "Delete", @theme, method: :delete, class: "button", data: {turbo_confirm: "Are you sure you want to delete this Theme?"}  %>
    <% end %>
  </div>
</div>
