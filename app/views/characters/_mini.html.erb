<div id="<%= dom_id character %>" class="card primary character mini">
  <div class="character_info">
    <% if can? :view_users, character %>
      <%= link_to "PROFILE", edit_admin_user_path(character.user) %> |
    <% end %>
    <span class="type_notif <% character.status %>">
      <% if character.draft? %>
        DRAFT
      <% end %>
      <% if character.locked? %>
        LOCKED
      <% end %>
    </span>
    <div class="tags">
      <%= render partial: 'characters/mini_tags', locals: { character: character} %>
    </div>
  </div>

  <% if character.description.present? %>
    <div>
      <%= character.mark_description %>
    </div>
  <% end %>
  
  <hr />

  <span class="character_date_time">
    <!-- Display the date and time of the character  -->
    <%= link_to (character.created_at).strftime("%Y-%m-%d %k:%M:%S"), character %>
  </span>

  <% if can? :edit, character %>
    <%= link_to "Edit", edit_character_path(character), class: "character_edit_link" %>
  <% end %>
</div>
