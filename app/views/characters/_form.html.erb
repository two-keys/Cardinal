<%= form_with(model: character, id: 'character_form') do |form| %>
  <%= render partial: 'characters/character_fields', locals: { character: character, form: form, pseudonym_options: } %>
  <% if local_assigns[:with_tags] %>
    <%= render partial: 'characters/form_tags/tag_fields', locals: { character: character} %>
  <% end %>

  <% if character.id.nil? %>
    <div>
      <%= form.button type: :submit, class: "btn btn-primary hover:btn-secondary" do %>
        Submit<span class="inline-block w-4 h-4 pt-px items-center"><%= render partial: 'shared/ticket' %></span>
      <% end %>
    </div>
  <% else %>
    <div>
      <%= form.submit 'Submit' %>
    </div>
  <% end %>
<% end %>

