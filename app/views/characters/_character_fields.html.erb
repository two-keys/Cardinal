<% if character.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:</h2>

    <ul>
      <% character.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= form.label :name, style: "display: block" %>
  <%= form.text_field :name %>
</div>

<div class="card secondary">
  <div class="input-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :color, {'data-controller': 'color-picker'} %>
  </div>
  <%= form.text_area :description, id: "character_#{character.id ? character.id : "new"}_description" , data: {controller: "easy-mde", 'easy-mde-save-value': true}  %>
</div>

<div>
  <%= form.label :pseudonym, style: "display: block" %>
  <%= select_tag('character[pseudonym_id]', options_for_select(pseudonym_options, character.pseudonym_id)) %>
</div>

<div>
  <%= form.label :status, style: "display: block" %>
  <div>
    <%= form.radio_button :status, 'draft' %><%= label_tag(:character_status_draft, 'draft') %>
    <%= form.radio_button :status, 'posted' %><%= label_tag(:character_status_posted, 'posted') %>
  </div>
</div>