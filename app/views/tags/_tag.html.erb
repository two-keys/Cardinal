<div id="<%= dom_id tag %>" class="card primary">
  <div class="tag_info">
    <strong><%= link_to tag.name, tag %></strong>:
    <span class="type_notif">
      <% if tag.enabled? %>
        ENABLED
      <% else %>
        DISABLED
      <% end %>
    </span>
  </div>
  <div class="tag_body">
    <p>
      Polarity: <%= tag.polarity %><br />
      Type: <%= tag.tag_type %>
    </p>
  
    <p>
      Name: <%= tag.name %><br />
      Lower: <%= tag.name.downcase %>
    </p>
  </div>
  
  <% if tag.synonym.present? %>
    Synonym
    <%= render partial: 'tags/mini', locals: {tag: tag.synonym} %>
  <% elsif tag.parent.present? %>
    Parent
    <%= render partial: 'tags/mini', locals: {tag: tag.parent} %>
  <% end %>
</div>
