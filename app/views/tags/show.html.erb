<%= render @tag %>

<div class="card">
  <% if can? :update, @tag %>
    <%= link_to "Edit this tag", edit_tag_path(@tag), class: "button" %> |
  <% end %>
  <%= link_to "Back to tags", tags_path, class: "button" %>

  <% if can? :destroy, @tag %>
    <%= button_to "Destroy this tag", @tag, method: :delete, class: "button", data: {turbo_confirm: "Are you sure?"} %>
  <% end %>
</div>
