<div class="flex-container" id="prompts_container">
  <div class="card primary">
    <%= link_to "New Prompt", new_prompt_path, class: "button" %>
    <div class="pagination">
      <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
    </div>
    <span>Your search has <strong><%= @pagy.count %></strong> total prompts!</span>
  </div>
  <%= render partial: 'prompts/mini', collection: @prompts, as: :prompt %>
  <div class="card primary">
    <div class="pagination">
      <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
    </div>
  </div>
</div>