<% tag_schema = TagSchema.get_schema(model.model_name.plural) %>
<% tag_schema.polarities.each do |polarity| %>
  <div id="<%= polarity %>" class="polarity">  
    <h4><%= polarity.upcase %></h4>
    <ul>
      <% model.tags_for(polarity).each do |tag_type, tags| %>
        <% tags.each do |tag| %>
          <% if tag.tooltip %>
            <li id="tag_<%= tag.id %>" class="<%= tag_type %> tag tooltip">
              <div class="tooltip-content">
                <div><%= tag.tooltip %></div>
              </div>
              <%= link_to "â“˜ #{tag.name}", tag_url(tag) %>
            </li>
          <% else %>
            <li id="tag_<%= tag.id %>" class="<%= tag_type %> tag">
              <%= link_to tag.name, tag_url(tag) %>
            </li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>