<% content_for "timestamp_#{pseudonym.id}" do %>
  <%= link_to legacy_time(pseudonym.updated_at || pseudonym.created_at), pseudonym, class: "old-timestamp hidden" %>
  <%= link_to readable_time(pseudonym.updated_at || pseudonym.created_at, mini: true), pseudonym, class: "new-timestamp" %>
<% end %>

<%= render partial: 'directory/card', locals: {
  model: pseudonym, variant: (defined?(variant) && variant) || 'full' 
} %>