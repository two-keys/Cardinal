<% content_for :page_title do %>
    Reports
<% end %>

<div class="card primary">
    <h1>Reports</h1>
    <div class="input-group">
        <%= link_to "Unhandled", reports_path, class: "button" %>
        <%= link_to "Handled", reports_path(handled: true), class: "button" %>
    </div>

    <div id="reports">
        <div class="max-lg:hidden">
            <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
        </div>
        <% @reports.each do |report| %>
            <div>
                <span>Type: <%= report.reportable_type %></span>
                <br />
                <span>Reported at: <%= report.created_at.strftime("%l:%M %p %b %d %Y") %></span>
            </div>
            <p>
                <%= link_to "Show", report, class: "button" %>
            </p>
        <% end %>
        <div class="max-lg:hidden">
            <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
        </div>
    </div>

</div>

<% content_for :secondary_navbar do %>
  <div class="px-4 pb-2 lg:hidden sticky bottom-0">
    <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
  </div>
<% end %>