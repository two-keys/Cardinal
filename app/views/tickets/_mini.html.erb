<div id="<%= dom_id ticket %>" class="card primary prompt mini">
  <div class="ticket_info">
    <% if can? :view_users, ticket %>
      <%= link_to "PROFILE", edit_admin_user_path(ticket.user) %> |
    <% end %>
  </div>

  <% if ticket.present? %>
    
  <% end %>
  <div>
    <% if ticket.item_type.present? %>
      <%= link_to "#{ticket.item_type} #{ticket.item_id}", ticket %>
    <% else %>
      No ticket item attached.
    <% end %>
  </div>
  
  <hr />

  <span class="ticket_date_time">
    <!-- Display the date and time of the prompt  -->
    <%= link_to ticket.created_at.strftime("%Y-%m-%d %k:%M:%S"), ticket %>
  </span>
</div>
