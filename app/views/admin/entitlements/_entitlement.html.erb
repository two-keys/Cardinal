
<div class="card">
    <% if entitlement.title %>
        <h3><%= entitlement.title %></h3>
    <% end %>
    <% if entitlement.object %>
        <p>Item (<%= entitlement.object_type %>):</p>
        <%= render entitlement.object %>
    <% end %>
    <% if entitlement.flag %>
        <br/>
        <span>Flag: </span>
        <%= entitlement.flag %>
    <% end %>
    <% if entitlement.data %>
        <br/>
        <span>Data: </span>
        <% if entitlement.flag == "emoji" %>
            <br/>
            <span>Emoji Title: <%= name_for_icon entitlement.data %></span>
            <br/>
            <div class="sidebar_user_icon">
                <span><%= icon_for entitlement.data %></span>
            </div>
        <% end %>
        <p style="text-wrap: wrap; max-width: 100%; white-space: pre-wrap; word-wrap: break-word;"><%= entitlement.data %></p>
    <% end %>
    <br/>
    
    Users
    <ul>
        <% entitlement.user_entitlements.each do |ue| %>
            <li><%= link_to ue.user.username, edit_admin_user_path(ue.user) %></li>
        <% end %>
    </ul>

    <br/>
    <%= link_to "Edit", edit_admin_entitlement_path(entitlement) %>
</div>