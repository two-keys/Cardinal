<% content_for :page_title do %>
    Directory
<% end %>

<div class="card primary">
  <h1>Alerts</h1>
  <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
  <p>
    <%= link_to "New Alert", new_admin_alert_path, class: "button" %>
  </p>
</div>

<div id="alerts">
  <% @alerts.each do |alert| %>
    <div class="card secondary">
      <%= render alert %>
      <div class="input-group">
        <%= link_to "Show", url_for([:admin, alert]), class: "button" %>
      </div>
    </div>
  <% end %>
</div>

<div class="card primary">
  <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
</div>
