<% content_for :page_title do %>
    Admin - IP Bans
<% end %>

<div class="card primary">
  <h1>IP Bans</h1>
  <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
  <p>
    <%= link_to "New IP Ban", new_admin_ip_ban_path, class: "button" %>
  </p>
</div>

<div class="card primary" id="ip_bans">
  <% @ip_bans.each do |ip_ban| %>
    <div class="card secondary">
      <%= render ip_ban %>
      <div class="input-group">
        <%= link_to "Show", url_for([:admin, ip_ban]), class: "button" %>
      </div>
    </div>
  <% end %>
</div>

<div class="card primary">
  <%== render partial: 'pagy/nav', locals: {pagy: @pagy} %>
</div>
